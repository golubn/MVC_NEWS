@model MVC_News.Models.New
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Details";
}

<h1 align="center" style="margin-bottom: 2rem">@Localizer["Details"]</h1>


<div>
    <hr />
    <dl class="row">
        
        <dd class="col-sm-10" style="margin-bottom: 2rem">
            @Html.DisplayFor(model => model.Title)
        </dd>
        
        <dd class="col-sm-10"style="margin-bottom: 2rem">
            @Html.DisplayFor(model => model.Subtitle)
        </dd>
        
        <dd class="col-sm-10" style="margin-bottom: 2rem">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
           
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.NewPictureURL)" />
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
